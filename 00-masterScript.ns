/** @param {NS} ns **/
export async function main(ns) {
    await ns.exec("01-spreadHack.ns", "home", 1, true);
    await ns.exec("02-upgradeServers.ns", "home", 1);
    await ns.exec("03-handleHacknet.ns", "home", 1);
    while(true){
        await ns.sleep(60000);
        await ns.exec("01-spreadHack.ns", "home", 1, false);
        await ns.exec("02-upgradeServers.ns", "home", 1);
        await ns.exec("03-handleHacknet.ns", "home", 1);
    }
}